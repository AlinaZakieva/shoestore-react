{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "vite.config.ts", "jest.config.cjs"],
  "exclude": ["dist", "node_modules"]
}